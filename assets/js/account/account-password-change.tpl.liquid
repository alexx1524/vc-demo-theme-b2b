<div class="col-md-8">
    <div class="page-header">
        <h3>{{ 'customer.change_password.title' | t }}</h3>
    </div>
    <vc-errors message="errorMessage" errors="errors"></vc-errors>
        <form ng-submit="$ctrl.submit()" name="detailForm">
            <vc-errors errors="$ctrl.errors" ng-if="$ctrl.errors.length"></vc-errors>

            <div class="alert alert-success" ng-if="$ctrl.succeeded">{{ 'customer.change_password.changed' | t }}</div>

            <vc-labeled-input disabled="true" value="$ctrl.passwordChangeData.oldPassword" name="oldPassword" placeholder="{{ 'customer.change_password.old_password' | t }}" form="detailForm" required="true" type="password" autofocus="true" ng-init="$ctrl.setForm(detailForm)"></vc-labeled-input>

            <vc-labeled-input disabled="true" value="$ctrl.passwordChangeData.newPassword" name="newPassword" placeholder="{{ 'customer.change_password.new_password' | t }}" form="detailForm" required="true" type="password"></vc-labeled-input>
            <div class="has-error" ng-if="$ctrl.error.newPassword && !detailForm.newPassword.$pristine">
                <span class="help-block text-danger">{{ 'customer.change_password.validation.new_password' | t }}</span>
            </div>

            <vc-labeled-input disabled="true" value="$ctrl.passwordChangeData.newPasswordConfirm" name="newPasswordConfirm" placeholder="{{ 'customer.change_password.new_password_confirm' | t }}" form="detailForm" required="true" type="password"></vc-labeled-input>
            <div class="has-error" ng-if="!detailForm.newPasswordConfirm.$pristine && $ctrl.error.newPasswordConfirm">
                <span class="help-block text-danger">{{ 'customer.change_password.validation.repeat_password' | t }}</span>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col px-lg-0 col-lg-2">
                        <button class="btn btn-primary" ng-disabled="true" ng-class="{ 'btn--disabled': detailForm.$pristine, 'loading': $ctrl.loader.isLoading }">
                            <span class="btn-text">{{ 'customer.change_password.submit' | t }}</span>
                            <span class="btn-loading"></span>
                        </button>
                    </div>
                    <div class="col py-3 px-lg-3 col-lg-5">
                        <p class="small">{{ 'customer.change_password.message' | t }}</p>
                    </div>
                </div>
            </div>
        </form>

</div>
