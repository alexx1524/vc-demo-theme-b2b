{% assign response_group = default_product_search_resp_group | plus: item_resp_group_variations | plus: item_resp_group_item_properties | plus: item_resp_group_item_editorial_reviews %}
<div class="text-uppercase">{{ product.properties['Brand'].value }}
</div>
<div class="mb-3">
    <a class="font-weight-bold text-body text-truncate d-inline-block mw-100" href="{{ product_url | append: '?resp_group=' | append: response_group }}">{{ product.localized_name }}</a><br>
    <span class="text-gray-700">{{ 'products.product.sku' | t }}</span><a class="text-body" href="{{ product_url| append: '?resp_group=' | append: response_group }}">{{ product.sku }}</a><br>
    <span class="text-gray-700">{{ 'products.product.mmn' | t }}</span>{{ product.properties['MMN'].value }}<br>
    <span class="text-gray-700">UNSPSC #</span><a class="text-body" href="{{ product_url| append: '?resp_group=' | append: response_group }}">{{ product.sku }}</a>
</div>
