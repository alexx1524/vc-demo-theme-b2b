<a class="navbar-brand" href="{{ '' | absolute_url }}" itemprop="url">
    {% if settings.logo_use_image %}
        <img alt="{{ shop.name }}" src="{{ 'ot-logo.svg' | asset_url }}" itemprop="logo" height="30" />
    {% else %}
        <strong class="h1 text-uppercase text-condensed hidden-xs hidden-sm">{{ shop.name }}</strong>
        <strong class="text-uppercase text-condensed visible-xs-inline visible-sm-inline">{{ shop.name }}</strong>
    {% endif %}
</a>
