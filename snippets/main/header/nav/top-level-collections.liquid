                                <a ng-href="{% raw %}{{ baseUrl + link.url }}{% endraw %}" ng-bind="link.title">
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6" ng-repeat="link in links" ng-if="!$even">
                        <ul class="nav nav-sm nav-pills nav-stacked text-nowrap">
                            <li>
                                <a ng-href="{% raw %}{{ link.url}}{% endraw %}" ng-bind="link.title">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
