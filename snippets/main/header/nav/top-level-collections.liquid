<ul class="nav navbar-nav">
    <li ng-class="{'active': isAllProductsOpen}" ng-mouseenter="isAllProductsOpen = true" ng-mouseleave="isAllProductsOpen = false">
        <a style="color:white;font-weight:bold" id="all-products-popover" href="" class="text-uppercase text-condensed" popover-class="popover-square hide-arrow" uib-popover-template="'all-products-popover.tpl'" popover-placement="bottom-left" popover-is-open="isAllProductsOpen" popover-trigger="'none'">
